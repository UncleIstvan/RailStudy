<div class="page-header">
  <h1>  <%= @tasktype.name %></h1>
</div>

<div class="panel panel-default">
  <div class="panel-body">
    <div class="col-md-5">
      <ul>
        <li><%= "ID: #{@tasktype.id}" %></li>
        <li><%= "Name: #{@tasktype.name}" %></li>
      </ul>


      <div class="btn-group">
        <%= link_to bs_glyph('arrow left', '', 'Go back to all task types'), tasktypes_path %>
        <%= link_to bs_glyph('pencil', '', 'edit'), edit_tasktype_path(@tasktype) %>
      </div>
    </div>
  </div>
</div>
