<h1>Search result</h1>
<% if @taskstypes.size == 0 %>
    <h2>Currently there's no tasks that match search criteria</h2>
<% else %>

    <%= form_tag({:controller => "tasktypes", :action => "name_search"}, method: :get) do %>
        <%= text_field_tag :name %>
        <%= submit_tag 'Search tasktype by name', name: nil %>
    <% end %>


    <%= render partial: 'table', locals: {taskstypes: @tasktypes} %>

<% end %>