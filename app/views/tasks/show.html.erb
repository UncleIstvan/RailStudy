<div class="page-header">
  <h1>  <%= @task.name %></h1>
</div>

<div class="panel panel-default">
  <div class="panel-body">

    <ul>
      <li><%= "ID: #{@task.id}" %></li>
      <li><%= "Description: #{@task.name}" %></li>
      <li><%= "Status: #{@task.task_status}" %></li>
      <li><%= "Task type: #{@task.tasktype.name}" %></li>
    </ul>

    <div class="btn-group">
      <%= link_to bs_glyph('arrow left', '', 'Go back to all tasks'), tasks_path %>
      <%= link_to bs_glyph('ok', '', 'Mark completed'), switch_task_path(@task), method: :switch %>
    </div>
  </div>
</div>